{
	"name": "harfbuzzjs",
	"version": "0.10.0",
	"description": "Minimal version of HarfBuzz for JavaScript use",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build:wasm": "make",
		"build:ts": "tsdown && cp hb.wasm dist/",
		"build": "npm run build:wasm && npm run build:ts",
		"prepare": "npm run build",
		"test": "make test"
	},
	"keywords": [
		"harfbuzz",
		"opentype",
		"truetype",
		"ttf",
		"otf",
		"graphics",
		"complex scripts",
		"typography",
		"font rendering",
		"font",
		"fonts",
		"emoji"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/harfbuzz/harfbuzzjs.git"
	},
	"author": "Ebrahim Byagowi <ebrahim@gnu.org>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/harfbuzz/harfbuzzjs/issues"
	},
	"homepage": "https://github.com/harfbuzz/harfbuzzjs#readme",
	"devDependencies": {
		"chai": "^4.3.7",
		"mocha": "^10.2.0",
		"rolldown-plugin-wasm": "^0.2.1",
		"tsdown": "^0.20.2",
		"typescript": "^5.9.3"
	}
}
